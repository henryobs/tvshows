<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body style="background-color: black;">
    <nav>
        <div>
            <h1>TV SHOWS</h1>
        </div>
        <div id="inpDetails">
            <input type="text" placeholder="Search" onkeyup="search()" id="searchItem">
            <i onclick="clearSearch()" id="clear" class="bi bi-x"></i>
            <div id="movieSearch">
                <!-- <div class="movieSearchItems">
                    <img src="power.jpg" alt="">
                    <div class="movieSearchItemsContents">
                        <h4>Powerbook 2</h4>
                        <h6>2016-......</h6>
                    </div>
                </div> -->
            </div>

        </div>

    </nav>

    <section id="bodyDetails">
        <div class="navDetails">
            <div id="name">
                <h1>
                    <%= post.tvShow.name %>
                </h1>
                <hr>
            </div>
        </div>

        <div id="containDetails">
            <div class="detailsContainMain">
                <div class="detailsContain">
                    <div class="imgDetails">
                        <img class="img1 replas" src="<%= post.tvShow.image_thumbnail_path %>"
                            alt="<%= post.tvShow.name %>">
                        <div class="mainSubs">
                            <div class="imgSubs">
                                <img id="fes" class="fes" src=" <%= post.tvShow.pictures[0] %>"
                                    alt="<%= post.tvShow.name %>">
                                <img id="sec" class="fes" src="<%= post.tvShow.pictures[1] %>"
                                    alt="<%= post.tvShow.name %>">
                                <img id="thir" class="fes" src="<%= post.tvShow.pictures[2] %>"
                                    alt="<%= post.tvShow.name %>">
                                <img id="fort" class="fes" src="<%= post.tvShow.pictures[3] %>"
                                    alt="<%= post.tvShow.name %>">
                            </div>
                        </div>

                    </div>

                    <div class="description">
                        <div class="blury">
                            <img class="replas" src="<%= post.tvShow.image_thumbnail_path %>" alt="">
                        </div>
                        <div class="descriptiveDetails">
                            <div class="textDetails">
                                <h4>
                                    <%= post.tvShow.description %>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="btn detailsBtn">

            <a href="http://localhost:9000">
                <button><i class="bi bi-arrow-left-circle-fill"></i>Home</button>
            </a>


        </div>
    </section>
    <script src="./script.js"></script>
</body>

</html>
